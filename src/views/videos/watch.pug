extends ../base
include ../mixins/comment

block content
    section#videoContainer(data-id=video._id)
        video(src="/" + video.fileUrl)
        section#videoControls.videoControls
            div.videoControls__play
                button#play
                    i.fa-solid.fa-play
                div#time.videoControls__time
                    span#currentTime 0:00
                    span  | 
                    span#totalTime
            input(type="range", step="1", value=0, min="0")#timeline.videoControls__timeline
            div.videoControls__volume
                input(type="range", step="0.1", value=0.5, min="0", max="1")#volume
                button#mute
                    i.fa-solid.fa-volume-high
            div
                button#fullscreen
                    i.fa-solid.fa-expand
        
    section.video__data
        p.video__title=video.title 
        div.video__owner-container
            div.avatar-default-mini
                i.fa-solid.fa-user
            small.video__owner
                a(href=`/users/${video.owner._id}`) #{video.owner.name}
            if (loggedIn)
                if String(video.owner._id) === String(loggedInUser._id)
                    button.video__button
                        a(href=`${video.id}/edit`) Edit Video
                    button.video__button
                        a(href=`${video.id}/delete`) Delete Video
        small.video__createdAt=video.createdAt
        p=video.description
        
    section.video__add-comments 
        form.video__comment-form#commentForm(data-login=`${ loggedIn ? loggedInUser._id : ''}`, data-name=`${ loggedIn ? loggedInUser.name : ''}`)
            textarea(spellcheck="true" placeholder='Write a nice comment...')
            button Add Comment
    section.video__comments 
        ul
            each comment in video.comments.reverse()
                +comment(comment)
        
block scripts
    script(src="/static/js/videoPlayer.js")
    script(src="/static/js/commentSection.js")